@{
    ViewData["Title"] = "Main";
    Layout = "_LayoutAditional";
}

<div class="latest-works-container">
    <h2>Последние работы</h2>
    <div class="works-grid">
        @if (Model.ContainsKey("newMessage"))
        {
            foreach (var message in Model["newMessage"])
            {
                <div class="work-item">
                    <h3>@message.Title</h3>
                    <p>@message.Content</p>
                    <span class="work-date">@message.DateCreation.ToString("dd.MM.yyyy")</span>
                </div>
            }
        }
    </div>
</div>